
<%= stylesheet_link_tag 'sessions', media: 'all' %>
<% if alert.present? %>
  <p id="alert"><%= alert %></p>
<% end %>
<%= form_tag sessions_path do |form| %>
<div class="header w-100 bg-main d-flex align-items-center">
  <div class="primero">
    <%= link_to root_path, class:'link' do %>
      <i class="fas fa-arrow-left text-light"></i>
    <% end %>
  </div>
  <div class="d-flex align-items center">
    <h4 class="text-casual text-uppercase text-light">LOGIN</h4>
  </div>
  <div class="actions">
    <%= submit_tag "Log in", class:'button text-casual-bold' %>
  </div>
</div>


  <div class="field input">
    <%= text_field_tag :name, nil, placeholder: 'Name', class: 'input-tag' %>
  </div>
  <div class="field input">
    <%= password_field_tag :password, nil, placeholder: 'Password', class: 'input-tag' %>
  </div>
<% end %>
